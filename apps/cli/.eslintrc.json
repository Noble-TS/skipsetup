{
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": [
          "./tsconfig.json",
          "./tsconfig.test.json"
        ],
        "tsconfigRootDir": "."
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {}
    },
    {
      "files": ["**/*.js", "eslint.config.js"],
      "parserOptions": {
        "sourceType": "module"
      },
      "rules": {}
    }
  ]
}
